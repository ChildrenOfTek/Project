{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ topic.title }}</h1>

    <table class='table'>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ post.author }}</td>
            </tr>
            <tr>
                <th>Dateedit</th>
                <td>{% if post.dateEdit %}{{ post.dateEdit|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('topic_index') }}">Retour</a>
        </li>
        <li>
            <a href="{{ path('post_edit', { 'id': post.id }) }}">Commenter</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
