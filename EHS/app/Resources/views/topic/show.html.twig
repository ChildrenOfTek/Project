{% extends 'base.html.twig' %}

{% block section %}
    <h1>{{ topic.title }}</h1>

    <table class='table'>
        <tbody>

            {% for post in topic.posts %}
                <tr>
                    <td>{{ post.content }}<td>
                    <td>Publi√© par {{ post.author }}
                    <td><a href="{{ path('post_edit', { 'id': post.id }) }}">Modifier</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('topic_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('post_new', { 'id': topic.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>






    
{% endblock %}
