{% extends 'base.html.twig' %}

{% block title %}
    Profil
{% endblock %}

{% block section %}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="panel panel-default">
            <div class="panel-heading">Profil de {{ user.nom }} {{ user.prenom }}</div>
            <div class="panel-body">
                <div class="container">
                    <table class="table table-hover table-bordered">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
                <th>Cp</th>
                <td>{{ user.cp }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ user.ville }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{% if user.birthDate %}{{ user.birthDate | localizeddate("medium", "none", null, null, "d LLL Y") }}{% endif %}</td>
            </tr>
        </tbody>
                <table>
                    <tr>
                        <td>
                            {% if app.user.username == user.username %}
                            <div class="buttonLink">
                                <a href="{{ path("password_change") }}">Changer de mot de passe</a>
                            </div>
                        </td>
                        <td>
                            {% if(is_granted('ROLE_ADMIN')) %}
                            <div class="buttonLink">
                                <a href="{{ path('user_editadmin',{"id":user.id}) }}">Editer son profil</a>
                            </div>
                        </td>
                        <td>
                            {% else %}
                                <div class="buttonLink">
                                    <a href="{{ path('user_edit',{"id":user.id}) }}">Editer son profil</a>
                                </div>
                            {% endif %}
                        </td>
                            {% endif %}

                    </tr>
                </table>



    </table>
</div></div></div></div></div>

{% endblock %}
