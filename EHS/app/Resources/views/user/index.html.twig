{% extends 'base.html.twig' %}

{% block title %}
    Gestion des utilisateurs
{% endblock %}

{% block section %}
<div class="wrapper">
    <div class="buttonLink">
        <a href="{{ path('user_new') }}">Ajouter un nouvel utilisateur</a>
    </div>

    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="panel panel-default">
          <div class="panel-heading">Gestion des utilisateurs</div>
            <div class="panel-body">
              <div class="container col-md-10 col-md-offset-1">
                <div class="table-responsive">
    <table class="table table-hover table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom d'utilisateur</th>
                <th>Role attribu√©</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>
                <th>Cp</th>
                <th>Ville</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Newsletter</th>
                <th>Date de naissance</th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.username }}</td>
                {% for user in user.userRoles %}
                <td>{{ user.name }}</td>
                {% endfor %}
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.adresse }}</td>
                <td>{{ user.cp }}</td>
                <td>{{ user.ville }}</td>
                <td>{{ user.telephone }}</td>
                <td>{{ user.email }}</td>
                <td>{% if user.newsletter %}Oui{% else %}Non{% endif %}</td>
                <td>{% if user.birthDate %}{{ user.birthDate|date('Y-m-d') }}{% endif %}</td>
                <!-- H:i:s-->
                <td>
                    <div class="buttonLink">
                        <a href="{{ path('user_show', { 'id': user.id }) }}">Voir</a>
                    </div>
                    <div class="buttonLink">
                        <a href="{{ path('user_editadmin', { 'id': user.id }) }}">Editer</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div></div></div></div></div>

  </div>
  </div>


{% endblock %}
