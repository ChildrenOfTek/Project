                    <h3> Bienvenue {{ app.user.username }} </h3>
                    <a href="{{ path("user_security_logout") }}">Se deconnecter</a>
                {% endif %}
            {% endblock %}
        
        
            
        {% block nav %}{% endblock %}
        
        
        {% block section %}{% endblock %}
        
        
        {% endblock %}
        
        
        {% block javascripts %}{% endblock %}
    </body>
</html>
