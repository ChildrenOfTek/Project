{% extends 'base.html.twig' %}

{% block section %}
    <h1>Article list</h1>
<div class="container">
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Utilisateur</th>
                <th>Date de r√©daction</th>
                <th>Titre de l'article</th>
                <th>Contenu</th>
                <th>Date de Publication</th>
                <th>Image</th>
                <th>En ligne</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td><a href="{{ path('article_show', { 'id': article.id }) }}">{{ article.id }}</a></td>
                <td>{{ article.user }}</td>
                <td>{{ article.dateArticle | date('d-m-Y H:i:s') }}</td>
                <td>{{ article.titreArticle }}</td>
                <td>{{ article.content }}</td>
                <td>{{ article.datePublication | date('d-m-Y H:i:s') }}</td>
                <td>{{ article.imageName }}</td>
                <td>{% if article.online %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('article_show', { 'id': article.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('article_edit', { 'id': article.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <ul>
        <li>
            <a href="{{ path('article_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
