{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tags</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ tag.libelle }}</td>
            </tr>
            <tr>
                <th>Articleid</th>
                <td>{{ tag.articleId }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tags_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tags_edit', { 'id': tag.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
