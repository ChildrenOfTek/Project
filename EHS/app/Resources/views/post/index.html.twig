{% extends 'base.html.twig' %}

{% block section %}
    <h1>Post list</h1>

    <table class='table'>
        <thead>
            <tr>

                <th>Content</th>
                <th>Author</th>
                <th>Dateedit</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>

                <td>{{ post.content }}</td>
                <td>{{ post.author }}</td>
                <td>{% if post.dateEdit %}{{ post.dateEdit|date('d-m-Y H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('post_show', { 'id': post.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('post_edit', { 'id': post.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('post_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
