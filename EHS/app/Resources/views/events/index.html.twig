{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/events/css/events.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block section %}
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default">
        <div class="panel-heading">Liste des événements</div>
        <div class="panel-body">
<div class="container">
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Start</th>
                <th>End</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td><a href="{{ path('events_show', { 'id': event.id }) }}">{{ event.id }}</a></td>
                <td>{{ event.title }}</td>
                <td>{{ event.description }}</td>
                <td>{% if event.start %}{{ event.start|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if event.end %}{{ event.end|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('events_show', { 'id': event.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('events_edit', { 'id': event.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('events_new') }}">Create a new entry</a>
        </li>
    </ul>

    {% for event in events %}
        <div class="event_block">
        <h1>{{ event.title }}</h1>
        {% if event.start %}{{ event.start|date('Y-m-d H:i:s') }}{% endif %}
        {% if event.end %}
            {% if event.start|date('Y-m-d') != event.end|date('Y-m-d') %}
                {{ event.end|date('=> Y-m-d H:i:s') }}
            {% else %}
                {{ event.end|date('=> H:i:s') }}
            {% endif %}
        {% endif %}
        <br/>{{ event.description }}
        </div>
    {% endfor %}

{% endblock %}
