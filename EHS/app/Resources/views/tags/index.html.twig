{% extends 'base.html.twig' %}

{% block section %}
    <h1>Liste des tags</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td><a href="{{ path('tags_show', { 'id': tag.id }) }}">{{ tag.id }}</a></td>
                <td>{{ tag.libelle }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('tags_show', { 'id': tag.id }) }}">Voir ce tag</a>
                        </li>
                        <li>
                            <a href="{{ path('tags_edit', { 'id': tag.id }) }}">Editer ce tag</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tags_new') }}">Cr√©er un nouveau tag</a>
        </li>
    </ul>
{% endblock %}
