{% extends 'base.html.twig' %}

{% block section %}
    <h1>Registration</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ registration.id }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ registration.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ registration.nom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ registration.email }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ registration.telephone }}</td>
            </tr>
            <tr>
                <th>Events</th>
                <td>{{ registration.events.title }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('registration_index') }}">Back to the list</a>
        </li>
        {% if(is_granted('ROLE_ADMIN')) %}
            <li>
                <a href="{{ path('registration_edit', { 'id': registration.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        {% endif %}
    </ul>
{% endblock %}
