{% extends 'base.html.twig' %}

{% block section %}
    <div class="container">
        <table class="table table-striped table-bordered">
        <tbody>

            <tr>
                <th><h1>{{ article.titreArticle }}</h1></th>
            </tr>
            <tr>
                <td>R&eacute;dig&eacute; par: {{ article.user }}</td>
                <td>Date cr√©ation: {{ article.dateArticle| date('d-m-Y H:i:s') }}</td>
            </tr>
            <tr>
                <td>{{ article.content }}</td>
                <td><img src="{{ asset('public/img/Articles/Article_'~article.dateArticle| date('d_m_y')~'/'~article.imageName ) }}" alt="{{ article.titreArticle }}" style="width:304px;height:228px;"></td></td>
            </tr>
            <tr>
                <th>Date de publication</th>
                <td>{{ article.datePublication | date('d-m-Y H:i:s') }}</td>
            </tr>
            <tr>
                <th>Nom du fichier</th>
                <td>{{ article.imageName }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td><!--Affichage des tags de l'article -->
                    {% for tag in article.tag %}
                    {{ tag.libelle }}
                    {% endfor  %}
                </td>

            </tr>
        </tbody>
    </table>
</div>
    <ul>
        <li>
            <a href="{{ path('article_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('article_edit', { 'id': article.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
