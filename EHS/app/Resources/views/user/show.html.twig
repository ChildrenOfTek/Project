{% endblock %}

{% block section %}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="panel panel-default">
            <div class="panel-heading">Utilisateur : {{ user.username }}</div>
            <div class="panel-body">
                <div class="container">
                    <table class="table table-hover table-bordered">


                        <tbody>
