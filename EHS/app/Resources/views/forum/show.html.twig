{% extends 'base.html.twig' %}

{% block section %}
    <h1>{{ forum.libForum  }}</h1>

    <table class='table'>
        <tbody>

            {% for topic in forum.topics %}
                <tr>
                  <td><a href="{{ path('topic_show',{ 'id': topic.id })}}">{{ topic.title }}<td>
                    <td><a href="{{ path('topic_edit', { 'id': topic.id, 'forum': forum.id }) }}">Modifier</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('forum_index') }}">Retour</a>
        </li>
        <li>
            <a href="{{ path('topic_new', { 'id': forum.id }) }}">Cr√©er un nouveau topic</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
