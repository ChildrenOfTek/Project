{% extends 'base.html.twig' %}

{% block title %}
    Création d'article
{% endblock %}

{% block section %}

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">Création d'un article</div>
        <div class="panel-body">
          <div class="container col-md-10 col-md-offset-1">
        {{ form_start(form) }}
        {{ form_row(form.user) }}
        {{ form_row(form.dateArticle) }}
        {{ form_row(form.titreArticle) }}
        {{ form_row(form.content) }}
        {{ form_row(form.datePublication) }}
        <div class="vich-file">
        {{ form_widget(form.imageFile) }}
        {{ form_row(form.tag) }}
        {{ form_row(form.online) }}
        <hr>
        <table>
          <tr>
            <td><input type="submit" value="Créer un article" class="button" >
              {{ form_end(form) }}
            </td>
            <td>
              <div class="buttonLink">
                <a href="{{ path('article_index') }}">Retour à la liste</a>
              </div>
            </td>
          </tr>
        </table>
    </div>
  </div>
</div>
</div>
</div>
</div>
{% endblock %}
